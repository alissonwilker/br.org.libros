<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="LibrosUsuarioPersistenceUnit"
		transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/LibrosUsuarioDS</jta-data-source>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<class>br.org.libros.usuario.model.persistence.entity.Usuario</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>

	<persistence-unit name="LibrosLivroPersistenceUnit"
		transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/LibrosLivroDS</jta-data-source>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<class>br.org.libros.livro.model.persistence.entity.Livro</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>

	<persistence-unit name="LibrosBibliotecaPersistenceUnit"
		transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/LibrosBibliotecaDS</jta-data-source>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<class>br.org.libros.biblioteca.model.persistente.entity.Biblioteca</class>
		<class>br.org.libros.biblioteca.model.persistente.entity.Cliente</class>
		<class>br.org.libros.biblioteca.model.persistente.entity.LivroBiblioteca</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>